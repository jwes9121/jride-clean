"use client";

import { useState } from "react";
import useSWR from "swr";

type Booking = {
  id: string;
  booking_code: string;
  status: string;
  pickup_address: string | null;
  dropoff_address: string | null;
  assigned_driver_id: string | null;
  created_at: string;
};

const fetcher = (url: string) =>
  fetch(url).then((res) => {
    if (!res.ok) {
      throw new Error("Failed to load active trips");
    }
    return res.json();
  });

export default function LiveTripsPage() {
  const { data, error, isLoading, mutate } = useSWR<Booking[]>(
    "/api/admin/active-trips",
    fetcher,
    {
      refreshInterval: 5000, // auto-refresh every 5s
    }
  );

  const [completingId, setCompletingId] = useState<string | null>(null);

  const handleComplete = async (bookingId: string) => {
    if (completingId) return;
    setCompletingId(bookingId);

    try {
      const res = await fetch("/api/admin/complete-trip", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ bookingId }),
      });

      if (!res.ok) {
        const body = await res.json().catch(() => ({}));
        console.error("COMPLETE_TRIP_ERROR", body);
        alert(
          "Failed to complete ride: " +
            (body?.message ?? body?.error ?? res.statusText)
        );
      } else {
        await mutate(); // refresh list
      }
    } catch (err: any) {
      console.error("COMPLETE_TRIP_CATCH", err);
      alert("Failed to complete ride: " + (err?.message ?? "Unknown error"));
    } finally {
      setCompletingId(null);
    }
  };

  if (isLoading) {
    return <div className="p-4">Loading active trips…</div>;
  }

  if (error) {
    console.error("ACTIVE_TRIPS_UI_ERROR", error);
    return (
      <div className="p-4 text-red-600">
        Error loading active trips. Check /api/admin/active-trips.
      </div>
    );
  }

  const trips = data ?? [];

  return (
    <div className="p-4 space-y-4">
      <h1 className="text-2xl font-semibold mb-2">Live Trips (Dispatch)</h1>
      {trips.length === 0 ? (
        <div className="text-gray-600">No active trips.</div>
      ) : (
        <div className="overflow-x-auto border rounded-lg">
          <table className="min-w-full text-sm">
            <thead className="bg-gray-100">
              <tr>
                <th className="px-3 py-2 text-left">Code</th>
                <th className="px-3 py-2 text-left">Pickup</th>
                <th className="px-3 py-2 text-left">Dropoff</th>
                <th className="px-3 py-2 text-left">Driver</th>
                <th className="px-3 py-2 text-left">Status</th>
                <th className="px-3 py-2 text-left">Created</th>
                <th className="px-3 py-2 text-left">Actions</th>
              </tr>
            </thead>
            <tbody>
              {trips.map((trip) => (
                <tr key={trip.id} className="border-t">
                  <td className="px-3 py-2 font-mono">{trip.booking_code}</td>
                  <td className="px-3 py-2">
                    {trip.pickup_address ? trip.pickup_address : "-"}
                  </td>
                  <td className="px-3 py-2">
                    {trip.dropoff_address ? trip.dropoff_address : "-"}
                  </td>
                  <td className="px-3 py-2">
                    {trip.assigned_driver_id ? trip.assigned_driver_id : "-"}
                  </td>
                  <td className="px-3 py-2">{trip.status}</td>
                  <td className="px-3 py-2">
                    {trip.created_at
                      ? new Date(trip.created_at).toLocaleString()
                      : "-"}
                  </td>
                  <td className="px-3 py-2">
                    <button
                      className="px-3 py-1 text-xs rounded bg-green-600 text-white disabled:opacity-50"
                      disabled={
                        completingId === trip.id || trip.status === "completed"
                      }
                      onClick={() => handleComplete(trip.id)}
                    >
                      {completingId === trip.id
                        ? "Completing…"
                        : "Complete ride"}
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  );
}
