{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "lib":  [
                                        "dom",
                                        "dom.iterable",
                                        "esnext"
                                    ],
                            "allowJs":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "noEmit":  true,
                            "esModuleInterop":  true,
                            "module":  "esnext",
                            "moduleResolution":  "bundler",
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "jsx":  "preserve",
                            "incremental":  true,
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      }
                        },
    "include":  [
                    "next-env.d.ts",
                    "**/*.ts",
                    "**/*.tsx",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules",
                    "backups",
                    "backups/**",
                    "UPLOAD_TO_CHATGPT",
                    "UPLOAD_TO_CHATGPT/**",
                    "_patch_bak",
                    "**/_patch_bak/**",
                    ".next",
                    "**/.next/**"
                ]
}
