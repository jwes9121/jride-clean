"use client";

import React from "react";

type Props = {
  onCall?: () => void;
  onNudge?: () => void;
  onReassign?: () => void;
  onEmergency?: () => void;
  disabled?: boolean;
};

export default function DispatchActionPanel({
  onCall,
  onNudge,
  onReassign,
  onEmergency,
  disabled,
}: Props) {
  const btn =
    "border border-slate-600 bg-slate-900/90 text-slate-100 hover:bg-slate-800 hover:border-slate-400 disabled:opacity-40 disabled:cursor-not-allowed rounded-lg px-3 py-2 text-[12px]";

  return (
    <div className="rounded-2xl border border-slate-800 bg-slate-950/90 p-3 text-[11px] text-slate-100 space-y-2">
      <div className="text-[10px] tracking-wide text-slate-300">
        DISPATCH ACTIONS
      </div>

      <div className="grid grid-cols-2 gap-2">
        <button className={btn} onClick={onCall} disabled={disabled}>
          Call
        </button>
        <button className={btn} onClick={onNudge} disabled={disabled}>
          Nudge
        </button>
        <button className={btn} onClick={onReassign} disabled={disabled}>
          Reassign
        </button>
        <button className={btn} onClick={onEmergency} disabled={disabled}>
          Emergency
        </button>
      </div>
    </div>
  );
}